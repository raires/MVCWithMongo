@model IEnumerable<MVCWithMongo.Models.DocumentPrimaryModel>

@{
    ViewBag.Title = "Get Primary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Primary Document</h2>

<p>
    @Html.ActionLink("Create New", "Registration")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model._id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item._id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item._id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item._id })
            </td>
        </tr>
    }

</table>
